<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <div class="mdl-card mdl-shadow--6dp" style="width: 100%">
      <div class="mdl-card__title mdl-card--border">
        <h2 class="mdl-card__title-text">
          <%= link_to material_icon.arrow_back, properties_path, class: "mdl-button", method: :get %> <%= @property.name %>
        </h2>
      </div>
      <div class="mdl-card__supporting-text">
        <h6>Features</h6>
        <ul>
          <li><strong>Address:</strong> <i><%= @property.address %></i></li>
          <li><strong>Province:</strong> <i><%= @property.province %></i></li>
          <li><strong>City:</strong> <i><%= @property.city %></i></li>
          <li><strong>Country:</strong> <i><%= @property.country %></i></li>
        </ul>

        <span class="mdl-chip">
          <span class="mdl-chip__text">RD$<%= @property.valuation %></span>
        </span>

        <span class="mdl-chip">
          <span class="mdl-chip__text"><%= @property.dimension %> M2</span>
        </span>
        <hr>
        <h6>Description</h6>
        <%= @property.description %>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to "#{ material_icon.mode_edit } Edit".html_safe, edit_property_path(@property), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect", method: :get %>
        <%= link_to "#{ material_icon.delete }
            Delete".html_safe,
            property_path(@property),
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>
    </div>
  </div>
</div>
