<div class="mdl-card mdl-shadow--6dp">
  <%= form_with model: @property, local: true do |form| %>
  <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
    <h2 class="mdl-card__title-text">
      <%= link_to material_icon.arrow_back, properties_path, class: "mdl-button", method: :get %>  <%= yield :card_title %>
    </h2>
  </div>
  <div class="mdl-card__supporting-text">
    <div class="mdl-textfield mdl-js-textfield ">
      <%= form.text_field :name, class: "mdl-textfield__input", id: :property_name %>
      <%= form.label :name, class: "mdl-textfield__label" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield ">
      <%= form.text_area :description, class: "mdl-textfield__input", id: :property_description %>
      <%= form.label :description, class: "mdl-textfield__label" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield ">
      <%= form.text_field :address, class: "mdl-textfield__input", id: :property_address %>
      <%= form.label :address, class: "mdl-textfield__label" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield ">
      <%= form.text_field :province, class: "mdl-textfield__input", id: :property_province %>
      <%= form.label :province, class: "mdl-textfield__label" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield ">
      <%= form.text_field :city, class: "mdl-textfield__input", id: :property_city %>
      <%= form.label :city, class: "mdl-textfield__label" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield ">
      <%= form.text_field :country, class: "mdl-textfield__input", id: :property_country %>
      <%= form.label :country, class: "mdl-textfield__label" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield ">
      <%= form.number_field :valuation, class: "mdl-textfield__input", id: :property_valuation, step: :any, min: 1 %>
      <%= form.label :valuation, class: "mdl-textfield__label" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield ">
      <%= form.number_field :dimension, class: "mdl-textfield__input", id: :property_dimension, step: :any, min: 1 %>
      <%= form.label :dimension, class: "mdl-textfield__label" %>
    </div>
  </div>

  <div class="mdl-card__actions mdl-card--border">
    <%= form.submit class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
  </div>
  <% end %>
</div>
